@mnemonic(needle-change-forest)
data DbcProof          : tapret#1 BPCore.TapretProof
                       | opret BPCore.OpretProof

@mnemonic(east-sunset-extra)
data GlobalOrd         : opOrd OpOrd, idx U16

@mnemonic(combat-henry-flood)
data OpOrd             : genesis ()
                       | extension (witness WitnessOrd
                       , ty RGBCommit.ExtensionType
                       , nonce U64
                       , opid RGBCommit.OpId)
                       | transition#255 (witness WitnessOrd
                       , ty RGBCommit.TransitionType
                       , nonce U64
                       , opid RGBCommit.OpId)

@mnemonic(orange-john-cyclone)
data WitnessOrd        : archived ()
                       | mined WitnessPos
                       | tentative ()

@mnemonic(cliff-enrico-nominal)
data WitnessPos        : layer1 RGBCommit.Layer1
                       , height U32
                       , timestamp I64


